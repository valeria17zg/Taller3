<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="615.0" prefWidth="678.0" spacing="20" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.fx10.controllers.ListadoProductoController">
    
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Tabla de productos -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label style="-fx-text-fill: #34495e; -fx-font-size: 16px; -fx-font-weight: bold;" text="Listado Inmuebles">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaInmuebles" style="-fx-background-color: #faedf4; -fx-border-color: #ffb3da; -fx-border-width: 3; -fx-background-radius: 5; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTipo" prefWidth="96.0" text="Tipo" />
                <TableColumn fx:id="colCiudad" prefWidth="108.0" text="Ciudad" />
                <TableColumn fx:id="colHabitaciones" prefWidth="89.0" text="# Habitaciones" />
            <TableColumn fx:id="colPisos" prefWidth="106.0" text="# Pisos" />
            <TableColumn fx:id="colPrecio" prefWidth="135.0" text="Precio" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="15" />
            </VBox.margin>
            <Button fx:id="btnEliminar" onAction="#onEliminarInmueble" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Eliminar Inmueble" />
        </HBox>
    </VBox>
</VBox>
